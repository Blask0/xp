<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="processorFactory" class="com.enonic.wem.mustache.internal.MustacheProcessorFactoryImpl"/>

  <service auto-export="interfaces" ref="processorFactory"/>

  <service auto-export="interfaces">
    <bean class="com.enonic.wem.mustache.internal.MustacheScriptContributor">
      <property name="processorFactory" ref="processorFactory"/>
    </bean>
  </service>

</blueprint>
