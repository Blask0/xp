<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference-list id="postProcessInjections" interface="com.enonic.xp.portal.postprocess.PostProcessInjection"
                  availability="optional"/>

  <reference-list id="postProcessInstructions" interface="com.enonic.xp.portal.postprocess.PostProcessInstruction"
                  availability="optional"/>

  <bean id="postProcessor" class="com.enonic.wem.portal.internal.postprocess.PostProcessorImpl">
    <property name="injections" ref="postProcessInjections"/>
    <property name="instructions" ref="postProcessInstructions"/>
  </bean>

  <bean id="controllerScriptFactory" class="com.enonic.wem.portal.internal.controller.ControllerScriptFactoryImpl">
    <property name="scriptService" ref="scriptService"/>
    <property name="postProcessor" ref="postProcessor"/>
  </bean>

  <service auto-export="interfaces">
    <bean class="com.enonic.wem.portal.internal.postprocess.injection.LiveEditInjection"/>
  </service>

  <service auto-export="interfaces">
    <bean class="com.enonic.wem.portal.internal.postprocess.instruction.ComponentInstruction">
      <property name="rendererFactory" ref="rendererFactory"/>
      <property name="componentService" ref="componentService"/>
    </bean>
  </service>

</blueprint>
