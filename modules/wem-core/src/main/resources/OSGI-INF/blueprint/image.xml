<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="imageFilterBuilder" class="com.enonic.wem.core.image.filter.ImageFilterBuilderImpl"/>

  <service auto-export="interfaces" ref="imageFilterBuilder"/>

  <reference id="tikaParser" interface="org.apache.tika.parser.Parser"/>
  <reference id="tikaDetector" interface="org.apache.tika.detect.Detector"/>

  <bean class="com.enonic.wem.core.image.TikaUsageService" init-method="diag">
    <property name="parser" ref="tikaParser"/>
    <property name="detector" ref="tikaDetector"/>
  </bean>

</blueprint>
