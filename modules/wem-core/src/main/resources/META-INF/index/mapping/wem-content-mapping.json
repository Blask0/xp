{
    "content": {
        "_all": {
            "enabled": true,
            "index_analyzer": "all_field_analyzer"
        },
        "_source": {
            "enabled": true
        },
        "date_detection": false,
        "numeric_detection": false,
        "properties": {
            "displayname": {
                "type": "multi_field",
                "fields": {
                    "title": {
                        "include_in_all": true,
                        "type": "string",
                        "index": "analyzed",
                        "analyzer": "keywordlowercase",
                        "store": "yes",
                        "boost": "1.1"
                    },
                    "fulltext": {
                        "include_in_all": true,
                        "type": "string",
                        "index": "analyzed",
                        "search_analyzer": "fulltext_search",
                        "index_analyzer": "fulltext_index",
                        "store": "yes"
                    }
                }
            }
        },
        "dynamic_templates": [
            {
                "template_userdata_orderby": {
                    "match": "*.orderby",
                    "mapping": {
                        "type": "string",
                        "store": "no",
                        "index": "analyzed",
                        "analyzer": "keywordlowercase",
                        "include_in_all": false
                    }
                }
            },
            {
                "template_userdata_date": {
                    "match": "*.date",
                    "mapping": {
                        "type": "date",
                        "store": "no",
                        "include_in_all": false
                    }
                }
            },
            {
                "template_userdata_number": {
                    "match": "*.number",
                    "mapping": {
                        "type": "double",
                        "store": "no",
                        "include_in_all": false
                    }
                }
            },
            {
                "template_userdata_strings": {
                    "match": "data_*",
                    "mapping": {
                        "type": "multi_field",
                        "fields": {
                            "{name}": {
                                "type": "string",
                                "index": "analyzed",
                                "store": "no"
                            },
                            "fulltext": {
                                "include_in_all": true,
                                "type": "string",
                                "index": "analyzed",
                                "search_analyzer": "fulltext_search",
                                "index_analyzer": "fulltext_index",
                                "store": "no"
                            }
                        }
                    }
                }
            },
            {
                "template_metadata_strings": {
                    "match": "*",
                    "mapping": {
                        "type": "string",
                        "store": "no",
                        "index": "analyzed"
                    }
                }
            }
        ]
    }
}
