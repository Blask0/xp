<?xml version="1.0" encoding="UTF-8"?>
<hazelcast xsi:schemaLocation="http://www.hazelcast.com/schema/config http://www.hazelcast.com/schema/config/hazelcast-config-3.1.xsd"
           xmlns="http://www.hazelcast.com/schema/config"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">


  <serialization>

    <serializers>
      <serializer type-class="com.enonic.wem.api.entity.EntityId">com.enonic.wem.core.entity.dao.EntityIdStreamSerializer</serializer>
      <serializer type-class="com.enonic.wem.api.entity.Entity">com.enonic.wem.core.entity.dao.EntityStreamSerializer</serializer>
    </serializers>

  </serialization>

  <network>
    <port auto-increment="true" port-count="100">5701</port>
    <outbound-ports>
      <ports>0</ports>
    </outbound-ports>

    <join>
      <multicast enabled="false">
        <multicast-group>224.2.2.3</multicast-group>
        <multicast-port>54327</multicast-port>
      </multicast>
      <tcp-ip enabled="false">
        <interface>127.0.0.1</interface>
      </tcp-ip>
    </join>

    <interfaces enabled="false">
      <interface>10.10.1.*</interface>
    </interfaces>
  </network>

  <services enable-defaults="true"/>

</hazelcast>
