<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="processorFactory" class="com.enonic.wem.xslt.internal.XsltProcessorFactoryImpl"/>

  <service auto-export="interfaces" ref="processorFactory"/>

  <service auto-export="interfaces">
    <bean class="com.enonic.wem.xslt.internal.XsltScriptLibrary">
      <argument index="0" ref="processorFactory"/>
    </bean>
  </service>

  <service auto-export="interfaces">
    <bean class="com.enonic.wem.xslt.internal.RenderViewHandler">
      <argument index="0" ref="processorFactory"/>
    </bean>
  </service>

</blueprint>
