<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <bean id="processorFactory" class="com.enonic.wem.xslt.internal.XsltProcessorFactoryImpl"/>

  <service auto-export="interfaces" ref="processorFactory"/>

  <service interface="com.enonic.wem.script.ScriptContributor">
    <bean class="com.enonic.wem.xslt.internal.XsltScriptContributor">
      <property name="processorFactory" ref="processorFactory"/>
    </bean>
  </service>

</blueprint>
