<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0">

  <reference id="elasticClient" interface="org.elasticsearch.client.Client"/>

  <bean id="elasticsearchDao" class="com.enonic.wem.repo.internal.elasticsearch.ElasticsearchDao">
    <property name="client" ref="elasticClient"/>
  </bean>

  <bean id="versionService" class="com.enonic.wem.repo.internal.elasticsearch.ElasticsearchVersionService">
    <property name="elasticsearchDao" ref="elasticsearchDao"/>
  </bean>

  <bean id="queryService" class="com.enonic.wem.repo.internal.elasticsearch.ElasticsearchQueryService">
    <property name="elasticsearchDao" ref="elasticsearchDao"/>
  </bean>

  <bean id="indexService" class="com.enonic.wem.repo.internal.elasticsearch.ElasticsearchIndexService">
    <property name="client" ref="elasticClient"/>
    <property name="elasticsearchDao" ref="elasticsearchDao"/>
  </bean>

  <bean id="workspaceService" class="com.enonic.wem.repo.internal.elasticsearch.workspace.ElasticsearchWorkspaceService">
    <property name="elasticsearchDao" ref="elasticsearchDao"/>
  </bean>

</blueprint>
